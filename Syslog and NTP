---
- hosts: bigip_devices
  connection: local
  gather_facts: false
  tasks:
  - name: Create a syslog config
  bigip_device_syslog:
    name: foo
    server: my.syslog.com
    provider: "{{ provider }}"
  
  - name: Set NTP server
  bigip_device_ntp:
    ntp_servers:
      - 192.0.2.23
    provider: "{{ provider }}"

- name: Set timezone
  bigip_device_ntp:
    timezone: America/Los_Angeles
    provider: "{{ provider }}"
